{
  "compilerOptions": {
    "target": "es2015",
    "module": "commonjs",
    "baseUrl": "./",
    "paths": {
      "*": ["types/*"]
    },
    "outDir": "dist",
    "sourceMap": true,
    "declaration": true,
    "declarationDir": "./declarations",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "noImplicitAny": false 
  },
  "types": ["declarations/index.d.ts"],
  "include": [
    "src/**/*.ts",
  ],
  "exclude": [
    "oldnode_modules"
  ]
}
