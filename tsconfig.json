{
  "compilerOptions": {
    "target": "es2015",
    "module": "commonjs",
    "baseUrl": "./",
    "paths": {
      "*": ["types/*"]
    },
    "outDir": "dist",
    "sourceMap": true,
    "declaration": true,
    "declarationDir": "./declarations",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
  },
  "include": [
    "src/**/*.ts",
  ],
  "exclude": [
    "node_modules"
  ]
}
